@model List<InventorySales.Application.Products.Queries.GetProductList.ProductListItemModel>
<h3>Product Editor</h3>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Products</h1>
            </div>
            <div class="panel-body">
                <table id="assets-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>ProductID</th>
                            <th>Product Name</th>
                            <th>Product Type Code</th>
                            <th>Product Description</th>
                            <th>ReorderLevel</th>
                            <th>ReorderQuantity</th>
                            <th>UnitPrice</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductTypeCode</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.ReorderLevel</td>
                            <td>@product.ReorderQuantity</td>
                            <td>@product.UnitPrice</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>